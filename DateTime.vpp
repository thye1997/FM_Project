class DateTime

	types
		public DateTime :: date: Date
		                   time: Time;

	instance variables
		public dateTime: DateTime;
		public time:Time:= new Time();
		public date: Date:= new Date();
		
	operations
		public createDateTime: () ==> DateTime
			createDateTime () == (
				dateTime := mk_DateTime(date.createDate(), time.createTime());
				return dateTime;
			);

		public paidDateTime: bool ==> DateTime
			paidDateTime (init) == (
				dateTime := mk_DateTime(new Date(), new Time());
			);
			
end DateTime